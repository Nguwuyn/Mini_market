@model IEnumerable<WebApplication1.Models.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Danh sách khách hàng</h2>

<p>
    @Html.ActionLink("Tạo mới", "Create", "", new { @class = "btn btn-success" })
</p>
<input type="text" id="myInput" onkeyup="searchCus('myInput', 'cusTable')" placeholder="Tìm kiếm khách hàng..">
<table id="cusTable" class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CusPhone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CusAddress)
        </th>
        <th>Action</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr class="clickable" onclick="window.location.href='/Customers/Details/@item.CustomerID'">
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CusPhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CusAddress)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.CustomerID }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.CustomerID })

            </td>
            <td></td>
        </tr>
    }

</table>
