@model IEnumerable<WebApplication1.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = ViewBag.Layout;
}

@*<h2>Danh sách các hãng</h2>*@
<h4>Các danh mục của sản phẩm</h4>

<p>
    @Html.ActionLink("Tạo mới", "Create", "", new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.CategoryID.ToString().Trim() }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.CategoryID.ToString().Trim() }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.CategoryID.ToString().Trim() })
            </td>
        </tr>
    }

</table>
